<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.intro.IntroActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mDialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/permission_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="343dp"
            android:layout_height="200dp"
            android:background="@drawable/c_dialog_back"
            >


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                app:fontFamily="@font/pretendard_extrabold"
                android:textSize="16dp"
                android:text="업데이트 알림"
                android:textStyle="bold"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/top_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/c_8c919f"
                android:textSize="12dp"
                android:text="@string/d_title"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/content"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/c_8c919f"
                android:textSize="12dp"
                android:text="@string/d_content"
                />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/okBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                app:fontFamily="@font/pretendard_bold"
                android:textSize="16dp"
                android:background="@drawable/j_btn_text_back"
                android:text="@string/confirm"
                android:textStyle="bold"
                />

